{
  "env": {
    "browser": true,
    "es2020": true
  },
  "globals": {
    "process": "readonly"
  },

  "extends": ["eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],

  "parserOptions": {
    "sourceType": "module"
  },

  "rules": {
    "no-unused-vars": "off",
    "no-extra-semi": "error"
  }
}
