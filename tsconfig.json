{
  "ts-node": {
    "files": true
  },
  "include": [
    "src",
    "vite.config.ts",
    "server.js",
    "mochaSetup.js",
    "hello.test.ts"
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "allowImportingTsExtensions": true,
    "sourceMap": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "skipLibCheck": true,

    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  }
}
